# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET        /                             controllers.HomeController.index
# An example controller showing how to use dependency injection
GET        /count                        controllers.CountController.count
# An example controller showing how to write asynchronous code
GET        /message                      controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                 controllers.Assets.versioned(path="/public", file: Asset)

#route set controller Game

GET        /exit/application             controllers.SetController.exitApplication

GET        /create/new/game              controllers.SetController.createNewGame

PUT        /add/player                   controllers.SetController.addPlayer(name : String)

GET        /cacel/add/player             controllers.SetController.cancelAddPlayer()

GET        /random/cards/in/field        controllers.SetController.randomCardsInField

GET        /finish/game                  controllers.SetController.finishGame

GET        /check/set                    controllers.SetController.checkSet(cards : List[String])

GET        /start/game                   controllers.SetController.startGame